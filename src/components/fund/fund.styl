.fund
  position absolute
  top 0px
  bottom 0
  width 100%
  color #fff
  .fund-header
    position relative
    height 200px
    background #34405a
    overflow hidden
    .header-top
      margin-top 50px
      margin-left 30px
      .net-fund
        font-size 36px
        color #9fa3ac
    .header-bottom
      display flex
      margin 20px 30px 0
      .bottom-item
        flex 1
        text-align left
        .total
          color #9fa3ac
    .hideNumber
      position absolute
      right 50px
      top 80px
      width 30px
      height 30px
      text-align center
      .icon
        font-size 20px
        line-height 30px
  .button-bar
    display flex
    font-family: '黑体'
    border-bottom 1px solid #999
    .button
      flex 1
      margin 20px
      background #fb5a60
      height 40px
      line-height 40px
      color #fff
      border-radius 6px
      box-shadow 4px 4px 10px #eee
      text-align center
  .records
    position absolute
    top 280px
    left 0
    bottom 75px
    width 100%
    color #777
    .list
      .list-item
        display flex
        height 60px
        border-bottom 1px solid #e3e5e7
        line-height 60px
        text-align center
        .icon
          flex 1
          line-height 60px
          font-size 24px
        .reason
          flex 1
          font-size 18px
        .account
          flex 1
          font-size 14px
        .type
          flex 1
          color #c00
          &.income
            color #0c0
        .num
          flex 1
        .time
          flex 1
          font-size 14px