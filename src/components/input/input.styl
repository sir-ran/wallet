.input
  position absolute
  width 100%
  height 100%
  overflow hidden
  background #fff
  transition all 0.3s
  &.swipe-enter, &.swipe-leave
    transform translateX(100%)
  .header
    text-align center
    height 50px
    line-height 50px
    border-bottom 1px solid #e3e5e7
    font-size 18px
  .type-bar
    padding 0 15px 0
    height 60px
    border-bottom 1px solid #e3e5e7
    line-height 60px
    .icon
      font-size 24px
      vertical-align middle
    .type
      font-size 18px
      vertical-align middle
      margin-left 15px
  .split
    width 100%
    height 20px
    background #f1f1f1
  .title
    font-size 20px
    margin-left 30px
  .input
    display flex
    height 50px
    padding 0 20px
    justify-content space-around
    box-sizing border-box
    .label
      flex 0 0 80px
      line-height 40px
    .input-box
      flex 0 0 200px
      border: 1px solid #ccc;
      margin-top 2px
      padding: 2px;
      font-size: 1.2em;
      color: #444;
      width: 200px;
      text-align right
      font-family: '黑体'
      height 30px
  .save-button
    display block
    width 300px
    height 30px
    margin 100px auto
    border 0
    background #f45842
    color #fff
    font-family '黑体'